<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="pl.edu.agh.to.mastermind.controller.StatsController">
      <Label fx:id="rankingLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" text="Ranking ">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#onApplyClick" text="Apply" />
      <ChoiceBox GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="difficulty" value="EASY"/>
      <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Choose Difficulty:" />
    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Most wins" />
    <TableView fx:id="rankingTable" GridPane.rowIndex="3" GridPane.columnIndex="0">
         <columns>
            <TableColumn fx:id="usernameCol" text="username">
            </TableColumn>
             <TableColumn fx:id="roundsCol" text="rounds per win">
             </TableColumn>
            <TableColumn fx:id="winsCol" text="wins">
            </TableColumn>
             <TableColumn fx:id="ratioCol" text="ratio">
             </TableColumn>
         </columns>
      </TableView>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="2" text="Best times" />
    <TableView fx:id="rankingTimeTable" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <columns>
            <TableColumn fx:id="usernameCol2" text="username">
            </TableColumn>
            <TableColumn fx:id="timeCol" text="time">
            </TableColumn>
        </columns>
    </TableView>
   <Button GridPane.rowIndex="10" GridPane.columnIndex="0" mnemonicParsing="false" onAction="#onReturnClick" text="Back" />

</GridPane>
